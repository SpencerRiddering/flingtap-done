<?xml version="1.0" encoding="utf-8"?>
<!-- 
   Intended to be used with EditNumberPreference
 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:padding="4dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
    <RelativeLayout
            android:id="@+id/archive_retention_number_chooser"
            android:padding="4dip"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <Button
                android:id="@+id/number_chooser_button_add"
                android:layout_width="70dip"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:padding="0dip"
                android:background="@drawable/numberpicker_up_btn"
                />
        <EditText
                android:id="@+id/number_chooser_text_edit"
                android:layout_width="70dip"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:numeric="integer"
                android:maxLength="3"
                android:singleLine="true"
                android:layout_below="@id/number_chooser_button_add"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:padding="0dip"
                android:background="@drawable/numberpicker_input"
                android:textSize="24sp"
                />
        <Button
                android:id="@+id/number_chooser_button_substract"
                android:layout_width="70dip"
                android:layout_height="wrap_content"
                android:layout_below="@id/number_chooser_text_edit"
                android:padding="0dip"
                android:background="@drawable/numberpicker_down_btn"
                />
    </RelativeLayout>

    <TextView
            android:id="@+id/archive_retention_text"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:layout_toLeftOf="@id/archive_retention_number_chooser"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/deleteArchivedTasksAfterHowManyDays"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:padding="4dip"
            />
</RelativeLayout>
